#!/bin/bash
test -x storage/environment && . ./storage/environment
ln -f -s ../../../afn/java/src/afn src
CMD="java -server -ea -Xmx32m -cp classes:lib/*:../../afn/java/lib/*:storage/lib/*:/storage/afn-python/src:/usr/share/java/* -Djava.net.preferIPv4Stack=true -Dh2.allowedClasses=jw.jzbot.PublicDatabaseUtils -Dsun.net.inetaddr.ttl=10 `cat storage/startup-args 2>/dev/null` jw.jzbot.JZBot $*"
echo 
echo Running with command $CMD
echo 
$CMD
lastvalue=$?
echo Exit status was $lastvalue
while [ $lastvalue == '17' ]
do
  sleep 5
  $CMD
  lastvalue=$?
  echo Exit status was $lastvalue
done
